@{
    ViewData["Title"] = "POS Screen";

}
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> *@

<style>
    .pos-container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        background-color: #f0f0f0;
    }

    .header {
        background-color: #e0e0e0;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .master-controls {
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }

    .menu-controls {
        display: flex;
        gap: 20px;
    }

    .main-content {
        display: flex;
        /*   flex: 1; */
        gap: 5px;
        padding: 5px;
        margin-left: 0px !important;
    }


    .description-panel {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .panel-header {
        padding: 10px;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .items-list {
        flex: 1;
        overflow-y: auto;
    }



    .grid-container {
        flex: 1;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 7px;
        overflow: auto;
    }

    .pos-grid {
        display: grid;
        grid-template-columns: repeat(5,1fr);
        gap: 10px;
        height: 70%;
    }

    .concept-menu, .menu-selector {
        display: flex;
        align-items: center;
    }

        .concept-menu select, .menu-selector select {
            min-width: 150px;
        }

    .grid-cell {
        aspect-ratio: 1;
        /* border: 1px solid #ddd; */
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: move;
        user-select: none;
        border: 1px solid #000; /* Optional: for visibility */
    }



        .grid-cell.dragging {
            opacity: 0.5;
        }

        .grid-cell.dragover {
            background-color: #e9ecef;
            border: 2px dashed #6c757d;
        }



    .side-categories {
        width: 500px;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .category-button {
        padding: 10px;
        background-color: #fff;
        border: 1px solid #ddd;
        text-align: center;
        cursor: pointer;
    }

    .footer {
        background-color: #e0e0e0;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .status-bar {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    /* Context Menu */
    .context-menu {
        position: fixed;
        background: white;
        border: 1px solid #ddd;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
        display: none;
        z-index: 1000;
    }

        .context-menu.show {
            display: block;
        }

    .menu-item {
        padding: 8px 12px;
        cursor: pointer;
    }

        .menu-item:hover {
            background-color: #f0f0f0;
        }

    /* Properties Dialog */
    .properties-dialog {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        padding: 20px;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        z-index: 1000;
    }

        .properties-dialog.show {
            display: block;
        }

    .dialog-content {
        width: 400px;
    }

    .font-controls, .color-controls {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-bottom: 20px;
    }

    .control-group {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .preview-section {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        min-height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dialog-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    /* Draggable Items */
    .draggable-item {
        padding: 10px;
        margin: 5px;
        background-color: #fff;
        border: 1px solid #ddd;
        cursor: move;
    }

        .draggable-item[data-type="beverage"] {
            background-color: #90EE90;
        }

        .draggable-item[data-type="food"] {
            background-color: #FFB6C1;
        }


    .draggable-text {
        cursor: grab;
        user-select: none;
    }

    .grid-container {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 10px;
    }



    .draggable-text {
        cursor: grab;
        font-size: 16px;
        font-weight: bold;
    }

    .grid-cell.selected {
        border: 2px solid #007bff;
    }

    .draggable-text.dragging {
        opacity: 0.5;
    }

    .grid-cell.dragover {
        border: 2px dashed #007bff;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .draggable-text {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: grab;
        user-select: none;
        padding: 5px;
        text-align: center;
    }

    .grid-cell.dragover {
        border: 2px dashed #007bff;
        background-color: rgba(0, 123, 255, 0.1);
    }

    .dragging {
        opacity: 0.5;
    }

    .grid-item {
        width: 100%;
        height: 100%;
        border: 1px solid #ccc;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: move;
    }

    /* Right Panel Styles */
    .right-panel {
        width: 300px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 10px;
    }

    .category-pair {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
    }

    .category-box {
        flex: 1;
        min-width: 0;
    }

    .category-header {
        padding: 5px;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        margin-bottom: 5px;
        font-weight: bold;
        text-align: center;
    }

    .category-cell {
        aspect-ratio: 1;
        border: 1px solid #ddd;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 80px;
    }



    .last-grid .category-cell {
        position: relative;
    }

    .navigation-arrows {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

        .navigation-arrows button {
            padding: 8px 15px;
            border: 1px solid #ddd;
            background-color: #fff;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .navigation-arrows button:hover {
                background-color: #f0f0f0;
            }

    .arrow-up, .arrow-down {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
    }

    /* Make the last grid cell slightly different to indicate it's special */
    .last-grid .category-cell {
        background-color: #f8f9fa;
    }


    .block-info-bar {
        background-color: #f8f9fa;
        padding: 10px 15px;
        border-bottom: 1px solid #ddd;
        margin-bottom: 15px;
    }

    .block-info {
        display: flex;
        align-items: center;
    }

        .block-info span {
            font-weight: 500;
        }

    /* Update category cell styles */
    .category-cell[data-type="beverage"] .grid-item {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .category-cell[data-type="food"] .grid-item {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @* new *@
    .page-navigation {
        padding: 10px 15px;
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
    }

    .page-numbers {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .page-number {
        width: 40px;
        height: 40px;
        border: 1px solid #ddd;
        background-color: white;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
    }

        .page-number.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .navigation-cell {
        display: flex;
        flex-direction: column;
        gap: 10px;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
    }

</style>


<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <!--begin::Col-->
            <div class="col-12">
                <!--begin::Card-->
                <div class="card">

                    <!--begin::Card Header-->
                    <div class="card-header">
                        <!--begin::Card Title-->
                        <div class="card-header header-background text-white text-center">
                            <h4>POS SCREEN</h4>
                        </div>


                        <!--begin::Card Toolbar-->
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                                <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                                <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-remove" title="Remove">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        <!--end::Card Toolbar-->
                    </div>


                    <!--begin::Card Body-->
                    <div class="card-body">

                       @*  <form asp-action="Create" method="post"> *@
                        <form action="#" method="post">
                            <!--begin::Row-->
                            <!-- Form -->

                            <div class="pos-container" style="width:100%">




                                <!-- Add Block Number Section -->
                                <!-- Update the block-info-bar div -->
                                <div class="block-info-bar">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center gap-3">
                                            <button id="openMainPage" class="btn btn-primary">
                                                <i class="fas fa-th"></i> Open Main Page
                                            </button>

                                        </div>
                                        <div class="page-numbers">
                                            @for (int i = 1; i <= 10; i++)
                                            {
                                                <button class="page-number @(i == 1 ? "active" : "")" data-page="@i">@i</button>
                                            }
                                        </div>
                                    </div>
                                </div>


                                <div class="main-content">

                                    <div class="row" style="text-align:left;width:20%">

                                        <div class="master-controls" style="align-content:flex-end">
                                            <label>Masters</label>
                                            <select id="masterDropdown" class="form-control">
                                                <option value="screens">Screens</option>
                                                <option value="items">Items</option>
                                            </select>

                                        </div>

                                        <div class="description-panel" style="align-content:flex-end">
                                            <div class="panel-header">
                                                <span>Description</span>
                                                <label><input type="checkbox" id="checkAll"> Check All</label>
                                            </div>
                                            <div id="itemsList" class="items-list">
                                                <div class="category">Beverages</div>
                                                <div class="category">Food</div>
                                            </div>
                                        </div>

                                    </div>


                                    <!-- Grid Container Row -->
                                    <div class="grid-container">
                                        <!-- Dropdowns Section -->
                                        <div class="menu-header d-flex justify-content-between align-items-center mb-3 flex-wrap">



                                            <!-- Concept Dropdown -->
                                            <div class="concept-menu d-flex align-items-center me-4">
                                                <label class="me-2 mb-0">Concept</label>
                                                <select id="conceptDropdown" class="form-control form-select">
                                                    <option value="default">Default</option>
                                                </select>
                                            </div>

                                            <!-- Menu Dropdown -->
                                            <div class="menu-selector d-flex align-items-center">
                                                <label class="me-2 mb-0">MENU</label>
                                                <select id="menuDropdown" class="form-control form-select">
                                                    <option value="own">Our Own Menu</option>
                                                    <option value="own">Special Menu</option>
                                                </select>
                                            </div>


                                            <!-- POS Grid -->
                                            <div id="posGrid" class="pos-grid">
                                                @for (int i = 0; i < 35; i++)
                                                {
                                                    <div class="grid-cell" data-index="@i">
                                                        <!-- This div will be added automatically when items are dropped -->
                                                    </div>
                                                }
                                            </div>


                                        </div>
                                    </div>


                                    <div class="right-panel">

                                        <!-- Remaining Grid Pairs -->
                                        @for (int i = 0; i < 14; i += 2)
                                        {
                                            <div class="category-pair">
                                                <div class="category-box">
                                                    <div class="grid-cell" data-index="@i"></div>
                                                </div>
                                                <div class="category-box">
                                                    <div class="grid-cell" data-index="@(i + 1)"></div>
                                                </div>
                                            </div>
                                        }


                                    </div>

                                </div>


                                <div class="footer">
                                    <div class="status-bar">Found 2 Screens</div>
                                    <div class="action-buttons">
                                        <!-- Screen Group Button -->
                                        <button class="btn btn-default" id="screenGroup">
                                            <i class="bi bi-collection"></i> Screen Group
                                        </button>

                                        <!-- Sub-group Button -->
                                        <button class="btn btn-default" id="subGroup">
                                            <i class="bi bi-grid"></i> Sub-group
                                        </button>
                                        <!-- Save Button -->
                                        <button class="btn btn-primary" id="save">
                                            <i class="bi bi-save"></i> Save
                                        </button>

                                        <!-- Delete Button -->
                                        <button class="btn btn-danger" id="delete">
                                            <i class="bi bi-trash"></i> Del
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Context Menu -->
                            <div id="contextMenu" class="context-menu">
                                <div class="menu-item" data-action="remove">
                                    <i class="fas fa-times"></i> Remove Item
                                </div>
                                <div class="menu-item" data-action="settings">
                                    <i class="fas fa-cog"></i> Apply Last Settings
                                </div>
                                <div class="menu-item" data-action="properties">
                                    <i class="fas fa-wrench"></i> Properties
                                </div>
                                <div class="menu-item" data-action="open">
                                    <i class="fas fa-folder-open"></i> Open
                                </div>
                            </div>

                            <!-- Properties Dialog -->
                            <div id="propertiesDialog" class="properties-dialog">
                                <div class="dialog-content">
                                    <!-- Font Controls -->
                                    <div class="font-controls">
                                        <div class="control-group">
                                            <label>Font type</label>
                                            <select id="fontType" class="form-control">
                                                <option value="Regular">Regular</option>
                                                <option value="Bold">Bold</option>
                                                <option value="Italic">Italic</option>
                                            </select>
                                        </div>

                                        <div class="control-group">
                                            <label>Font size</label>
                                            <select id="fontSize" class="form-control">
                                                @for (int i = 8; i <= 20; i++)
                                                {
                                                    <option value="@i">@i</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Color Controls -->
                                    <div class="color-controls">
                                        <div class="control-group">
                                            <label>Forecolor</label>
                                            <input type="color" id="foreColor" class="form-control">
                                        </div>
                                        <div class="control-group">
                                            <label>Backcolor</label>
                                            <input type="color" id="backColor" class="form-control">
                                        </div>
                                    </div>

                                    <!-- Preview Section -->
                                    <div class="preview-section">
                                        <div id="previewText" class="draggable-text" draggable="true">Preview</div>
                                    </div>

                                    <!-- Dialog Buttons -->
                                    <div class="dialog-buttons">
                                        <button id="cancelProperties" class="btn btn-secondary">Cancel</button>
                                        <button id="applyProperties" class="btn btn-primary">Apply</button>
                                    </div>
                                </div>
                            </div>




                            <!--end::Row-->
                        </form>
                    </div>
                    <!--end::Card Body-->

                </div>
                <!--end::Card-->

            </div>
            <!--end::Col-->
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>





