@{
	ViewData["Title"] = "Region";
}


<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


	<!--begin::Container-->
	<div class="container-fluid">
		<!--begin::Row-->
		<div class="row">
			<!--begin::Col-->
			<div class="col-12">
				<!--begin::Card-->
				<div class="card">

					<!--begin::Card Header-->
					<div class="card-header">
						<!--begin::Card Title-->
						<div class="card-header header-background text-white text-center">
							<h4>Region</h4>
						</div>
					
					</div>


					<!--begin::Card Body-->
					<div class="card-body">

						<form asp-action="Create" method="post">
							<!--begin::Row-->
							<!-- Form -->
							<!-- ENTRY SECTION -->
							<div class="row g-3">
								<div class="col-md-12">
									<h5 class="fw-bold">Entry</h5>
									<div class="mb-3">
										<label class="form-label">Country:</label>
										<select class="form-select">
											<option selected>--Select--</option>
											<option value="1">Sultanate of Oman</option>
											<option value="2">Papua New Guinea</option>
											<option value="3">Ghana</option>
											<option value="4">United Arab Emirates</option>
											<option value="5">Lebanon</option>
										</select>
									</div>
									@*  <div class="mb-3 d-flex align-items-center">
                                            <button class="btn btn-primary w-100">
                                                <i class="fa fa-plus"></i> Add
                                            </button>
                                        </div> *@
									<!-- Align Add button to the right -->
							
									<div class="mb-3">
										<label class="form-label">Region Name:</label>
										<input type="text" class="form-control" placeholder="Enter region name">
									</div>

									<div class="d-flex align-items-end">
										<div class="form-check form-switch">
											<input class="form-check-input" type="checkbox" id="activeCheck">
											<label class="form-check-label" for="activeCheck">Active</label>
										</div>
									</div>
									<div class="mb-3 d-flex justify-content-end">
												<button class="btn btn-primary">
													<i class="bi bi-plus-lg"></i> Add
												</button>

									</div>
								</div>

								<!-- LIST SECTION -->
								@*   <div class="col-md-7 border p-3 rounded bg-white">
                                        <h5 class="fw-bold">List</h5>
                                        <div class="row g-3">


                                        </div>
                                    </div> *@
							</div>



							<!-- TABLE SECTION -->
							<div class="card mt-4 shadow-sm">
								<div class="card-header header-background text-white">
									<div class="row align-items-center g-2">
										<!-- List Title -->
										<div class="col-12 col-md-3">
											<span class="fw-bold">List</span>
										</div>

										<!-- Move the following elements to the right and stack when shrunk -->
										<div class="col-12 col-md-9">
											<div class="row justify-content-md-end g-2">
												<!-- Country Dropdown -->
												<div class="col-12 col-md-auto mb-2 mb-md-0">
													<label class="form-label mb-0">Country:</label>
													<select class="form-select form-select-sm w-100">
														<option selected>--Select--</option>
														<option value="1">Ghana</option>
														<option value="2">United Arab Emirates</option>
														<option value="3">Lebanon</option>
													</select>
												</div>

												<!-- Sort By Dropdown -->
												<div class="col-12 col-md-auto mb-2 mb-md-0">
													<label class="form-label mb-0">Sort By:</label>
													<select class="form-select form-select-sm w-100">
														<option selected>--Select--</option>
														<option value="1">All</option>
														<option value="2">Active</option>
														<option value="3">Inactive</option>
													</select>
												</div>

												<!-- Search Box -->
												<div class="col-12 col-md-auto mb-md-0 mt-0">
													<label class="form-label d-none d-md-block">&nbsp;</label>
													<div class="input-group input-group-sm w-100">
														<input type="text" class="form-control" placeholder="Search ...">
														<span class="input-group-text"><i class="bi bi-search"></i></span>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>



								<!-- Scrollable Body Section -->
								<div class="card-body overflow-auto" style="max-height: 500px;">
									<div class="table-responsive">
										<table class="table table-striped table-hover align-middle" style="min-width: 800px;">
											<thead class="table-success">
												<tr>
													<th>#</th>
													<th>Region Name</th>
													<th>SysId</th>
													<th>Status</th>
													<th>Actions</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>1</td>
													<td>ABC</td>
													<td>ABC123</td>
													<td>
														<span class="badge bg-success">Active</span>
													</td>
													<td>
														<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
														<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
													</td>
												</tr>

												<tr>
													<td>2</td>
													<td>UFS</td>
													<td>UFS456</td>
													<td>
														<span class="badge bg-danger">Inactive</span>
													</td>
													<td>
														<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
														<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
													</td>
												</tr>
											</tbody>
										</table>
									</div>
								</div>
							</div>



						

							<!-- BUTTONS -->
							<div class="text-center mt-4">
								<hr>
								<div class="d-grid gap-2 d-md-flex justify-content-md-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
										<i class="bi bi-save"></i> Save
									</button>
											<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
										<i class="bi bi-x-circle"></i> Clear
									</button>
								</div>
							</div>



							<!--end::Row-->
						</form>
					</div>
					<!--end::Card Body-->

				</div>
				<!--end::Card-->

			</div>
			<!--end::Col-->
		</div>
		<!--end::Row-->
	</div>
	<!--end::Container-->

		</div>

	</div>

</div>


@section Scripts {
	<script>
		$(document).ready(function () {
			// Search functionality
			$("#searchInput").on("keyup", function () {
				var value = $(this).val().toLowerCase();
				$("tbody tr").filter(function () {
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
				});
			});
		});
	</script>
}