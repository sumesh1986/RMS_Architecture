@{
	ViewData["Title"] = "Zone Area Settings";
}




<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">
							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Zone Area</h4>
								</div>
								<!--end::Card Title-->


							</div>
							<!--end::Card Header-->
							<!--begin::Card Body-->
							<div class="card-body">
								<!--begin::Row-->


								<div class="row g-3">
									<!-- ENTRY SECTION -->
									<div class="col-lg-5">
										<h5 class="mb-3">Entry</h5>
										<div class="mb-3">
											<label class="form-label">Country:</label>
											<select id="ddlSortBy" class="form-select">
												<option selected>--Select--</option>
												<option>Sultanate of Oman</option>
												<option>Papua New Guinea</option>
												<option>Ghana</option>
												<option>United Arab Emirates</option>
												<option>Lebanon</option>
											</select>
										</div>

										<div class="mb-3 d-flex">
											<select id="DropDownList7" class="form-select me-2 flex-grow-1">
												<option selected>--Select Region/State--</option>
											</select>
											<button type="button" class="btn btn-primary">
												<i class="bi bi-plus-lg"></i>
											</button>
										</div>

										<div class="mb-3 d-flex">
											<select id="DropDownList8" class="form-select me-2 flex-grow-1">
												<option selected>--Select City/Town--</option>
											</select>
											<button type="button" class="btn btn-primary">
												<i class="bi bi-plus-lg"></i>
											</button>
										</div>

										<div class="mb-3">
											<label class="form-label">Enter Zone / Area Name:</label>
											<input type="text" id="TextBox2" class="form-control" />
										</div>

										<div class="form-check form-switch">
											<input class="form-check-input" type="checkbox" id="activeCheck">
											<label class="form-check-label" for="activeCheck">Active</label>
										</div>
									</div>

									<!-- LIST SECTION -->
									<div class="col-lg-7">
										<h5 class="mb-3">List</h5>
										<div class="row g-3">
											<div class="col-md-3">
												<select class="form-select">
													<option selected>--Country--</option>
												</select>
											</div>
											<div class="col-md-3">
												<select class="form-select">
													<option selected>--Region/State--</option>
												</select>
											</div>
											<div class="col-md-3">
												<select class="form-select">
													<option selected>--City/Town--</option>
												</select>
											</div>
											<div class="col-md-3">
												<select class="form-select">
													<option selected>All</option>
													<option>Active</option>
													<option>Inactive</option>
												</select>
											</div>
										</div>

										<div class="my-3">
											<input type="text" class="form-control" placeholder="Search">
										</div>

										<div class="table-responsive" style="max-height: 250px; overflow-y: auto;">
											<label class="form-label">Name of Zone:</label>
											<select id="ListBox1" class="form-select" multiple style="height: 200px;"></select>
										</div>
									</div>

									<div class="col-md-6"><div id="sidebar-color-code" class="w-100"></div></div>
								</div>

								<!-- BUTTONS -->
								<div class="text-center mt-4">
									<hr>
									<div class="d-grid gap-2 d-md-flex justify-content-md-end">
										<button type="submit" class="btn btn-primary button-background waves-effect">
											<i class="bi bi-save"></i> Save
										</button>
										<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
											<i class="bi bi-x-circle"></i> Clear
										</button>
									</div>
								</div>
								<!--end::Row-->
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->
		</div>
	</div>
</div>

