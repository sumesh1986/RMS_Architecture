@model RMS_Models.Models.ScreenGroupViewModel

@{
	ViewData["Title"] = "ScreenGroup";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.input-group-text {
		cursor: pointer;
		transition: all 0.2s ease-in-out;
		border-top-left-radius: 0;
		border-bottom-left-radius: 0;
	}

		.input-group-text:hover {
			background-color: #0056b3 !important;
		}

	.list-section .list-header {
		border: 1px solid #dee2e6;
		border-radius: 5px;
		background-color: #f8f9fa;
	}

	.table-container {
		border: 1px solid #dee2e6;
		border-radius: 5px;
		overflow: hidden;
	}

</style>
<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">



			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Screen Group</h4>
								</div>

							</div>


							<!--begin::Card Body-->
							<!-- Top Form Section -->
							<div class="card-body">
								<form asp-action="Save" method="post" class="screen-group-form">
									<!-- Top Section -->
									<div class="row g-3 align-items-end mb-3">
										<!-- Choose Screen -->
										<div class="col-md-4">
											<label asp-for="ScreenGroup.ScreenName" class="form-label mb-0">Choose Screen</label>
											<select asp-for="ScreenGroup.ScreenName" class="form-select form-select-sm"
													asp-items="@(new SelectList(Model.AvailableScreens))">
											</select>
										</div>

										<!-- Screen Group Name -->
										<div class="col-md-4">
											<label asp-for="ScreenGroup.GroupName" class="form-label mb-0">Screen Group Name</label>
											<input asp-for="ScreenGroup.GroupName" class="form-control form-control-sm">
										</div>

										<!-- ID (Read-only) -->
										<div class="col-md-4">
											<label class="form-label mb-0">ID</label>
											<div class="input-group input-group-sm">
												<span class="input-group-text bg-secondary text-white">ID</span>
												<input asp-for="ScreenGroup.Id" class="form-control form-control-sm" readonly>
											</div>
										</div>

										<!-- Active Switch -->
										<div class="col-auto mt-2">
											<div class="form-check form-switch">
												<input asp-for="ScreenGroup.IsActive" class="form-check-input" type="checkbox" id="activeSwitch">
												<label class="form-check-label" for="activeSwitch">Active</label>
											</div>
										</div>
									</div>

									<!-- List Section -->
									<div class="list-section mt-4">
										<div class="list-header bg-light p-3 rounded">
											<h6 class="text-primary mb-3">The Screen Group List</h6>

											<!-- Search and Filter Row -->
											<div class="row g-3 align-items-end mb-2">
												<!-- Screen Dropdown -->
												<div class="col-md-4">
													<label class="form-label small mb-1">Screen</label>
													<select class="form-select form-select-sm" id="screenFilter">
														<option>Our Own Menu</option>
													</select>
												</div>

												<!-- Search Input with Icon -->
												<div class="col-md-8">
													<label class="form-label small mb-1">Search</label>
													<div class="input-group input-group-sm">
														<input type="text" class="form-control" id="searchInput" placeholder="Search...">
														<span class="input-group-text header-background text-white" id="basic-addon1">
															<i class="bi bi-search"></i>
														</span>
													</div>
												</div>
											</div>
										</div>

										<!-- Table -->
										<div class="card mt-4 shadow-sm">
											<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
												<span class="fw-bold">List</span>
												<!-- Search Box -->
												<div class="input-group input-group-sm w-auto ms-auto">
													<input type="text" class="form-control" id="searchInput2" placeholder="Search...">
													<span class="input-group-text"><i class="bi bi-search"></i></span>
												</div>
											</div>


											<div class="card-body">
												<div class="table-responsive">
													<table class="table table-striped table-hover align-middle">
														<thead class="table-success">
															<tr>
																<th>#</th>
																<th>Screen Group</th>
																<th>Status</th>
																<th>Actions</th>
															</tr>
														</thead>
														<tbody>
															<tr>
																<td>1</td>
																<td>ABC</td>
																<td><span class="badge bg-success">Active</span></td>
																<td>
																	<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																	<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
																</td>
															</tr>
															<tr>
																<td>2</td>
																<td>USS</td>
																<td><span class="badge bg-danger">Inactive</span></td>
																<td>
																	<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																	<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
																</td>
															</tr>
														</tbody>
													</table>
												</div>
											</div>
										</div>
									
									</div>

									<!-- Buttons -->
									<div class="text-center mt-4">
										<hr>
										<div class="d-grid gap-2 d-md-flex justify-content-md-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
												<i class="bi bi-save"></i> Save
											</button>
											<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
												<i class="bi bi-x-circle"></i> Clear
											</button>
										</div>
									</div>
								</form>
							</div>





							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->


		</div>
	</div>
</div>

