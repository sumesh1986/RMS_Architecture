@{
	ViewData["Title"] = "Combo";
}

<style>
	.section-border {
		border: 1px solid #ddd;
		padding: 15px;
		border-radius: 8px;
		margin-bottom: 15px;
	}

	.section-heading {
		font-weight: bold;
		display: block;
		margin-bottom: 10px;
	}
</style>

<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Combo</h4>
								</div>

							</div>


							<!--begin::Card Body-->
							<div class="card-body">

								<form asp-action="Create" method="post">
									<!--begin::Row-->
									<!-- Form -->

									<div class="row g-3">
										<div class="col-lg-12">
											<div class="section-border">
												<span class="section-heading">Combo Enabled Items</span>
												<div class="mb-3">
													<label class="form-label">Group:</label>
													<select class="form-select">
														<option selected>--Select--</option>
													</select>
												</div>


												<!-- Table -->
												<div class="card mt-4 shadow-sm">
													<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
														<span class="fw-bold">List</span>
														<!-- Search Box -->
														<div class="input-group input-group-sm w-auto ms-auto">
															<input type="text" class="form-control" id="searchInput2" placeholder="Search...">
															<span class="input-group-text"><i class="bi bi-search"></i></span>
														</div>
													</div>

														<div class="card-body">
															<div class="table-responsive">
															<table class="table table-striped table-hover align-middle">
																<thead class="table-success">
																		<tr>
																		<th>#</th>
																			<th>Item Name</th>
																			<th>Other Language</th>
																			<th>Price</th>
																		</tr>
																	</thead>
																	<tbody>
																		<tr>
																			<td>1</td>
																			<td>10%</td>
																			<td>Sample Discount</td>
																			<td>10%</td>
																		</tr>
																		<tr>
																			<td>2</td>
																			<td>15%</td>
																			<td>Sample Discount</td>
																			<td>10%</td>
																		</tr>
																	</tbody>
																</table>
															</div>
														</div>
													</div>

												
											</div>

										</div>

										<div class="row g-3">
											<div class="col-lg-12">
												<div class="section-border">
													<span class="section-heading">Items</span>
													<div class="mb-3">
														<label class="form-label">Group:</label>
														<select class="form-select">
															<option selected>--Select--</option>
														</select>
													</div>
													<input type="text" class="form-control mb-3" placeholder="Search">
													<select class="form-select" multiple style="height: 200px;"></select>
													@*   <div class="text-end mt-3">
                            <button class="btn btn-primary">Add</button>
                        </div> *@
												</div>
											</div>

										</div>

										<!-- Table -->
										<div class="card mt-4 shadow-sm">
											<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
												<span class="fw-bold">List</span>
												<!-- Search Box -->
												<div class="input-group input-group-sm w-auto ms-auto">
													<input type="text" class="form-control" id="searchInput2" placeholder="Search...">
													<span class="input-group-text"><i class="bi bi-search"></i></span>
												</div>
											</div>

											<div class="card-body">
												<div class="table-responsive">
													<table class="table table-striped table-hover align-middle">
														<thead class="table-success">
															<tr>
																<th>#</th>
																<th>Item Name</th>
																<th>Other Language</th>
																<th>Quantity</th>
																<th>Price</th>
																<th>Status</th>
																<th>Actions</th>
															</tr>
														</thead>
														<tbody>
															<tr>
																<td>1</td>
																<td>Sample Discount</td>
																<td>10%</td>
																<td>Sample Discount</td>
																<td>10%</td>
																<td>
																	<span class="badge bg-success">Active</span>
																</td>
																<td>
																	<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																	<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
																</td>
															</tr>

															<tr>
																<td>2</td>
																<td>Special Offer</td>
																<td>15%</td>
																<td>Sample Discount</td>
																<td>10%</td>
																<td>
																	<span class="badge bg-danger">Inactive</span>
																</td>
																<td>
																	<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																	<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
																</td>
															</tr>
														</tbody>
													</table>
												</div>
											</div>
										</div>


										<!-- BUTTONS -->
										<div class="text-center mt-4">
											<hr>
											<div class="d-grid gap-2 d-md-flex justify-content-md-end">
												<button type="submit" class="btn btn-primary button-background waves-effect">
													<i class="bi bi-save"></i> Save
												</button>
												<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
													<i class="bi bi-x-circle"></i> Clear
												</button>
											</div>
										</div>


									</div>
									<!--end::Row-->
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->

		</div>
	</div>

</div>


@section Scripts {
	<script>
		$(document).ready(function () {
			// Search functionality
			$("#searchInput").on("keyup", function () {
				var value = $(this).val().toLowerCase();
				$("tbody tr").filter(function () {
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
				});
			});
		});
	</script>
}