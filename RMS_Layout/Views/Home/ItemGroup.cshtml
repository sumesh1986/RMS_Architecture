@{
	ViewData["Title"] = "Item Group";
}

<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Item Group</h4>
								</div>

							</div>


							<!--begin::Card Body-->
							<div class="card-body">

								<form asp-action="Create" method="post">
									<!--begin::Row-->
									<!-- Form -->



									<div class="mb-3">
										<label class="form-label">Group Name:</label>
										<div class="d-flex align-items-center">
											<input type="text" class="form-control me-2" placeholder="Group Name">
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" id="activeCheck">
												<label class="form-check-label" for="activeCheck">Active</label>
											</div>
										</div>


									</div>
									<div class="mb-3">
										<label class="form-label">Choose Division:</label>
										<select class="form-select">
											<option selected>--Select--</option>
										</select>
									</div>
									<div class="row">
										<div class="col-md-6">
											<h5>Tax & Service</h5>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" id="activeCheck">
												<label class="form-check-label ms-2" for="activeCheck">Select All</label>
											</div>
											<select class="form-select mt-2" multiple size="6"></select>
										</div>
										<div class="col-md-6">
											<h5>Where to Print</h5>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" id="activeCheck">
												<label class="form-check-label ms-2" for="activeCheck">Select All</label>
											</div>
											@*    <input type="checkbox" id="selectAllPrint" class="form-check-input">
                                    <label for="selectAllPrint" class="ms-2">Select All</label> *@
											<select class="form-select mt-2" multiple size="6"></select>
										</div>
									</div>
									<div class="row mt-3">
										<div class="col-md-4">
											<label class="form-label">Revenue A/C</label>
											<input type="text" class="form-control">
										</div>
										<div class="col-md-4">
											<label class="form-label">Discount A/C</label>
											<input type="text" class="form-control">
										</div>
										<div class="col-md-4">
											<label class="form-label">Expense A/C</label>
											<input type="text" class="form-control">
										</div>
									</div>


									<!-- Table -->
									<div class="card mt-4 shadow-sm">
										<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
											<span class="fw-bold">List</span>
											<!-- Search Box -->
											<div class="input-group input-group-sm w-auto ms-auto">
												<input type="text" class="form-control" id="searchInput2" placeholder="Search...">
												<span class="input-group-text"><i class="bi bi-search"></i></span>
											</div>
										</div>

										<div class="card-body">
											<div class="table-responsive">
												<table class="table table-striped table-hover align-middle">
													<thead class="table-success">
														<tr>
															<th>#</th>
															<th>Division</th>
															<th>SysId</th>
															<th>HideonPDA</th>
															<th>Modifier</th>
															<th>Status</th>
															<th>Actions</th>
														</tr>
													</thead>
													<tbody>
														<tr>
															<td>1</td>
															<td>ABC</td>
															<td>ABC123</td>
															<td>12345</td>
															<td>ABC Group</td>

															<td>
																<span class="badge bg-success">Active</span>
															</td>
															<td>
																<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
															</td>
														</tr>

														<tr>
															<td>2</td>
															<td>UFS</td>
															<td>UFS456</td>
															<td>54321</td>
															<td>UFS Group</td>

															<td>
																<span class="badge bg-danger">Inactive</span>
															</td>
															<td>
																<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
															</td>
														</tr>
													</tbody>
												</table>
											</div>
										</div>
									</div>

									<!-- BUTTONS -->
									<div class="text-center mt-4">
										<hr>
										<div class="d-grid gap-2 d-md-flex justify-content-md-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
												<i class="bi bi-save"></i> Save
											</button>
											<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
												<i class="bi bi-x-circle"></i> Clear
											</button>
										</div>
									</div>



									<!--end::Row-->
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->

		</div>
	</div>
</div>


