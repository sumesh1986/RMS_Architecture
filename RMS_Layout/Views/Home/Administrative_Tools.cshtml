<script>

		$(document).ready(function () {
		// Show POS tab by default only on initial page load
		if (window.location.hash === '') {
			$('#basic1').addClass('show active');
		}

		// Handle tab switching inside Basic and Advanced dropdowns
		$('.dropdown-menu .dropdown-item').on('click', function (e) {
			e.preventDefault();

			var targetTab = $(this).attr('href');

			// Hide all tab panes
			$('.tab-pane').removeClass('show active');

			// Show the selected tab only
			$(targetTab).addClass('show active');
		});

		// Prevent POS tab from showing unnecessarily after clicking other tabs
		$('.dropdown-menu .dropdown-item').on('click', function () {
			if ($(this).attr('href') !== '#basic1') {
				$('#basic1').removeClass('show active');
			}
		});

		// Ensure Clear button resets to POS tab
		$('#clearBtn').on('click', function () {
			// Hide all tabs and reset to POS tab
			$('.tab-pane').removeClass('show active');
			$('#basic1').addClass('show active');
		});
	});





</script>
