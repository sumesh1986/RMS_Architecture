@{
	ViewData["Title"] = "Item Count";
}
<style>
	.header-background:hover {
		background-color: #0056b3;
		filter: brightness(90%);
	}
</style>

<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Item Count</h4>
								</div>
							
							</div>


							<!--begin::Card Body-->
							<div class="card-body">

								<form asp-action="Create" method="post">
									<!--begin::Row-->
									<!-- Form -->

									<div class="row g-3">
										<div class="col-12">
											<label for="group" class="form-label">Group:</label>
											<input type="text" id="group" class="form-control" placeholder="Enter group name">
										</div>

										<div class="col-12">
											<div class="p-3 rounded" style="background: #f2f2f2;">
												<label class="form-label fw-bold text-dark">Item Group Name</label>
												<select class="form-select" multiple style="height: 250px;">
													<option></option>
													<option></option>
												</select>
											</div>
										</div>
									</div>
									<div class="row g-3 mt-3 align-items-end">
										<!-- Quantity Input -->
										<div class="col-md-2 col-12">
											<label for="quantity" class="form-label">Quantity:</label>
											<input type="number" id="quantity" class="form-control">
										</div>

										<!-- Set Count Button -->
										<div class="col-md-4 col-12 d-flex align-items-end">
											<button class="btn header-background text-white w-100">
												<i class="bi bi-arrow-repeat"></i> Set Count for Selected
											</button>
										</div>

										<!-- Buttons Group -->
										<div class="col-md-6 col-12">
											<div class="row g-2">
												<!-- Reset All -->
												<div class="col-md-4 col-12">
													<button class="btn header-background text-white w-100">
														<i class="bi bi-x-circle"></i> Reset All
													</button>
												</div>
												<!-- Reset Selected -->
												<div class="col-md-4 col-12">
													<button class="btn header-background text-white w-100">
														<i class="bi bi-arrow-counterclockwise"></i> Reset Selected
													</button>
												</div>
												<!-- Update Button -->
												<div class="col-md-4 col-12">
													<button class="btn header-background text-white w-100">
														<i class="bi bi-pencil-square"></i> Update
													</button>
												</div>
											</div>
										</div>


									</div>


									<div class="row g-3 mt-3 align-items-center">
										<!-- Display Filtered -->
										<div class="col-md-4 col-12">
											<div class="form-check form-switch">
												<input type="checkbox" id="displayFiltered" name="displayOptions" class="form-check-input">
												<label for="displayFiltered" class="form-check-label">Display all items with countdown enabled based on the selected group.</label>
											</div>
										</div>

										<!-- Display All Items -->
										<div class="col-md-4 col-12">
											<div class="form-check form-switch">
												<input type="checkbox" id="displayAll" name="displayOptions" class="form-check-input">
												<label for="displayAll" class="form-check-label">Display All Items</label>
											</div>
										</div>

										<!-- Select All -->
										<div class="col-md-4 col-12">
											<div class="form-check form-switch">
												<input type="checkbox" id="selectAll" class="form-check-input">
												<label for="selectAll" class="form-check-label">Select All</label>
											</div>
										</div>
									</div>


									<!-- Table -->
									<div class="card mt-4 shadow-sm">
										<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
											<span class="fw-bold">List</span>
											<div class="input-group input-group-sm w-auto ms-auto">
												<input type="text" class="form-control" id="searchInput" placeholder="Search...">
												<span class="input-group-text"><i class="bi bi-search"></i></span>
											</div>
										</div>

										<div class="card-body">
											<div class="table-responsive">
												<table class="table table-striped table-hover align-middle">
													<thead class="table-success">
														<tr>
															<th>#</th>
															<th>Item Group</th>
															<th>Item Name</th>
															<th>Item in Other Language</th>
															<th>Def-Barcode</th>
															<th>Price</th>
															<th>Set Counter</th>
															<th>SysId</th>
															<th>Status</th>
															<th>Actions</th>
														</tr>
													</thead>
													<tbody>
														<tr>
															<td>1</td>
															<td>10%</td>
															<td>Sample Discount</td>
															<td>1</td>
															<td>10%</td>
															<td>Sample Discount</td>
															<td>Sample Discount</td>
															<td>Sample Discount</td>
															<td>
																<span class="badge bg-success">Active</span>
															</td>
															<td>
																<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
															</td>
														</tr>

														<tr>
															<td>2</td>
															<td>10%</td>
															<td>Sample Discount</td>
															<td>1</td>
															<td>10%</td>
															<td>Sample Discount</td>
															<td>Sample Discount</td>
															<td>Sample Discount</td>
															<td>
																<span class="badge bg-danger">Inactive</span>
															</td>
															<td>
																<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
															</td>
														</tr>
													</tbody>
												</table>
											</div>
										</div>
									</div>


									<!-- BUTTONS -->
									<div class="text-center mt-4">
										<hr>
										<div class="d-grid gap-2 d-md-flex justify-content-md-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
												<i class="bi bi-save"></i> Save
											</button>
											<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
												<i class="bi bi-x-circle"></i> Clear
											</button>
										</div>
									</div>



									<!--end::Row-->
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->

		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			// Search functionality
			$("#searchInput").on("keyup", function () {
				var value = $(this).val().toLowerCase();
				$("tbody tr").filter(function () {
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
				});
			});
		});
	</script>
}