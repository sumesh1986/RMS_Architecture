@{
	ViewData["Title"] = "Preview";
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<style>
	.form-spacing {
		margin-top: 2rem;
		margin-bottom: 2rem;
	}
</style>

<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Preview Order Sales</h4>
								</div>
								<!--end::Card Title-->

							</div>
							<!--end::Card Header-->
							<!--begin::Card Body-->
							<div class="card-body">
								<form asp-action="Create" method="post">
									<!-- Main Form Row -->
									<div class="row g-3">
										<!-- Concept -->
										<div class="col-md-3">
											<label for="concept" class="form-label">Concept:</label>
											<select id="concept" class="form-control">
												<option selected>--Select--</option>
											</select>
										</div>

										<!-- Group Name -->
										<div class="col-md-3">
											<label for="groupName" class="form-label">Group Name:</label>
											<select id="groupName" class="form-control">
												<option selected>--Select--</option>
											</select>
										</div>

										<!-- Branch Name -->
										<div class="col-md-3">
											<label for="branchName" class="form-label">Branch Name:</label>
											<select id="branchName" class="form-control">
												<option selected>--Select--</option>
											</select>
										</div>
									</div>

									<!-- Date Range Row -->
									<div class="row g-3 form-spacing">
										<!-- Date From -->
										<div class="col-md-3">
											<label for="dateFrom" class="form-label">Date From:</label>
											<input type="text" id="dateFrom" name="DateFrom" class="form-control datepicker" placeholder="yyyy-mm-dd" />
										</div>

										<!-- Date To -->
										<div class="col-md-3">
											<label for="dateTo" class="form-label">Date To:</label>
											<input type="text" id="dateTo" name="DateTo" class="form-control datepicker" placeholder="yyyy-mm-dd" />
										</div>

										<!-- Submit Button -->
										<div class="col-md-3 d-flex align-items-end">
											<button type="submit" class="btn btn-primary button-background waves-effect w-100">
												<i class="bi bi-eye"></i> Show Preview/Transaction
											</button>
										</div>
									</div>

									<!-- List Header Section -->

									<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
										<span class="fw-bold">List</span>
										<!-- Search Box -->
										<div class="input-group input-group-sm w-auto ms-auto">
											<input type="text" class="form-control" id="searchInput2" placeholder="Search...">
											<span class="input-group-text"><i class="bi bi-search"></i></span>
										</div>
									</div>
									<!-- Table Section -->
									<div class="card-body">
										<div class="table-responsive">
											<table class="table table-striped table-hover align-middle" id="eodTable">
												<thead class="table-success">
													<tr>
														<th>#</th>
														<th>Date and Time</th>
														<th>EOD No</th>
														<th>Total Sales</th>
														<th>EOD Done by</th>
														<th>EOD Terminal</th>
													</tr>
												</thead>
												<tbody>
													<tr>
														<td class="serial"></td>
														<td>ABC</td>
														<td>ABC123</td>
														<td>12345</td>
														<td>09:00 AM</td>
														<td>06:00 PM</td>

													</tr>
													<tr>
														<td class="serial"></td>
														<td>UFS</td>
														<td>UFS456</td>
														<td>54321</td>
														<td>10:00 AM</td>
														<td>07:00 PM</td>

													</tr>
												</tbody>
											</table>
										</div>
									</div>

									<!-- Open Transactions Button -->
									<div class="row g-3 mt-3">
										<div class="col-md-3 ms-auto text-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
												<i class="bi bi-folder2-open"></i> Open Transactions
											</button>
										</div>
									</div>
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->



		</div>

	</div>
</div>



<script src="~/js/jquery-3.6.4.min.js"></script>





<!-- jQuery Script for Auto-Increment Serial Numbers -->
<script>
	$(document).ready(function () {
		// Auto-increment serial numbers for each row
		$('#eodTable tbody tr').each(function (index) {
			$(this).find('.serial').text(index + 1);
		});

		// Datepicker Initialization
		$(".datepicker").datepicker({
			format: 'yyyy-mm-dd',
			autoclose: true
		});
	});
</script>