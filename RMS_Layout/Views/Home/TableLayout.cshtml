<style>
	.table-box {
		position: absolute;
		background-color: lightgray;
		color: #9f8c8c;
		font-weight: bold;
		display: flex;
		align-items: center;
		justify-content: center;
		border: 1px solid #db7c7c;
		box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
		border-radius: 5px;
		cursor: move;
	}

	.ui-resizable-handle {
		width: 7px;
		height: 7px;
		/* background-color: #ffffff;
						border: 2px solid #0056b3;*/
		background-color: #d98484;
		border: 2px solid #a55d2b;
		position: absolute;
		z-index: 10;
	}

	.ui-resizable-nw {
		top: -6px;
		left: -6px;
		cursor: nw-resize;
	}

	.ui-resizable-ne {
		top: -6px;
		right: -6px;
		cursor: ne-resize;
	}

	.ui-resizable-sw {
		bottom: -6px;
		left: -6px;
		cursor: sw-resize;
	}

	.ui-resizable-se {
		bottom: -6px;
		right: -6px;
		cursor: se-resize;
	}
</style>
