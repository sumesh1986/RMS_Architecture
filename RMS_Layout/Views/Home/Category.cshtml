@{
	ViewData["Title"] = "Category";
}



<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Category</h4>
								</div>

							</div>


							<!--begin::Card Body-->
							<div class="card-body">

								<form asp-action="Create" method="post">
									<!--begin::Row-->
									<!-- Form -->

									<div class="row g-3">
										<div class="col-md-4">
											<label class="form-label">Category Name:</label>
											<input type="text" class="form-control" id="txtCategoryName" placeholder="Enter Category Name">
											<div class="mt-3">
												<select class="form-control" id="listCategory" size="8"></select>
											</div>
											<div class="mt-2">
												<label><b>Total Records: </b><span id="lblTotalRecords">0</span></label>
											</div>
										</div>

										<div class="col-md-4">
											<label class="form-label">Division Assigned to the Selected Category</label>
											<input type="text" class="form-control" id="txtDivisionSearch" placeholder="Search">
											<div class="mt-3">
												<select class="form-control" id="listDivision" size="8"></select>
											</div>
											<div class="mt-2">
												<label><b>Total Records: </b><span id="lblDivisionRecords">0</span></label>
											</div>
										</div>

										<div class="col-md-4">
											<label class="form-label">Group Assigned to the Selected Division</label>
											<input type="text" class="form-control" id="txtGroupSearch" placeholder="Search">
											<div class="mt-3">
												<select class="form-control" id="listGroup" size="8"></select>
											</div>
											<div class="mt-2">
												<label><b>Count: </b><span id="lblGroupCount">0</span></label>
											</div>
										</div>
									</div>



									<!-- BUTTONS -->
									<div class="text-center mt-4">
										<hr>
										<div class="d-grid gap-2 d-md-flex justify-content-md-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
												<i class="bi bi-save"></i> Save
											</button>
											<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
												<i class="bi bi-x-circle"></i> Clear
											</button>
										</div>
									</div>



									<!--end::Row-->
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->


		</div>
	</div>

</div>



