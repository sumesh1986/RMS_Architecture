@{
	ViewData["Title"] = "Order Types";
}


<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Order Types</h4>
								</div>

							</div>


							<!--begin::Card Body-->
							<div class="card-body">

								<form asp-action="Create" method="post">
									<!--begin::Row-->
									<!-- Form -->
									<div class="container-fluid py-2">
										<div class="row mb-4">
											<div class="col-lg-12 p-4 border rounded shadow-sm bg-light">
												<div class="col-md-12 section-border">
													<span class="section-heading">Settings</span>

													<div class="row g-4 mb-4">
														<div class="col-md-6">
															<div class="form-group">
																<label>Description:</label>
																<input type="text" class="form-control" />
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>Function / Mode of Operation:</label>
																<input type="text" class="form-control" />
															</div>
														</div>
													</div>

													<div class="row g-4 mb-4">
														<div class="col-md-6">
															<div class="form-group">
																<label>Price Group:</label>
																<select class="form-select">
																	<option selected>Default</option>
																	<option>Online</option>
																	<option>Students</option>
																</select>
															</div>
														</div>
														<div class="col-md-6">
															<div class="form-group">
																<label>Screen Menu:</label>
																<select class="form-select">
																	<option selected>Our Own Menu</option>
																</select>
															</div>
														</div>
													</div>

													<div class="row g-4 mb-4">
														<div class="col-md-12">
															<div class="form-group">
																<label class="text-uppercase fw-bold">Options:</label>
																<div class="form-check form-switch">
																	<input class="form-check-input" type="checkbox" id="option1">
																	<label class="form-check-label text-uppercase" for="option1">Enforce Customer Section</label>
																</div>
																<div class="form-check form-switch">
																	<input class="form-check-input" type="checkbox" id="option2">
																	<label class="form-check-label text-uppercase" for="option2">Open Cash Drawer When Settling Payment</label>
																</div>
																<div class="form-check form-switch">
																	<input class="form-check-input" type="checkbox" id="option3">
																	<label class="form-check-label text-uppercase" for="option3">Enable Auto Upsell</label>
																</div>
																<div class="form-check form-switch">
																	<input class="form-check-input" type="checkbox" id="option4">
																	<label class="form-check-label text-uppercase" for="option4">Print Customer Details on Invoice</label>
																</div>
																<div class="form-check form-switch">
																	<input class="form-check-input" type="checkbox" id="option5">
																	<label class="form-check-label text-uppercase" for="option5">Print Customer Details on Kot</label>
																</div>
																<div class="form-check form-switch">
																	<input class="form-check-input" type="checkbox" id="option6">
																	<label class="form-check-label text-uppercase" for="option6">Skip Kot</label>
																</div>
															</div>
														</div>
													</div>

													<div class="row g-4 mb-4">
														<div class="col-md-10 col-12">
															<div class="form-group">
																<label>Extra Copy on Default Printer:</label>
																<select class="form-select">
																	<option>No</option>
																	<option selected>1</option>
																	<option>2</option>
																	<option>3</option>
																</select>
															</div>
														</div>
														<div class="col-md-2 col-12 text-end text-center pt-md-4 pt-2">
															<button class="btn btn-primary">
																<i class="bi bi-printer"></i> Print
															</button>
														</div>
													</div>

												</div>
											</div>
										</div>

										<!-- Table -->
										<div class="row card mt-4 shadow-sm">
											<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
												<span class="fw-bold">List</span>
												<div class="input-group input-group-sm w-auto ms-auto">
													<input type="text" class="form-control" id="searchInput" placeholder="Search...">
													<span class="input-group-text"><i class="bi bi-search"></i></span>
												</div>
											</div>

											<div class="card-body">
												<div class="table-responsive">
													<table class="table table-striped table-hover align-middle">
														<thead class="table-success">
															<tr>
																<th>#</th>
																<th>Order Type</th>
																<th>Function</th>
																<th>Enforce CS</th>
																<th>Extra on Default</th>
																<th>Status</th>
																<th>Actions</th>
															</tr>
														</thead>
														<tbody>
															<tr>
																<td>1</td>
																<td>Region A</td>
																<td>12345</td>
																<td>Yes</td>
																<td>1</td>
																<td>
																	<span class="badge bg-success">Active</span>
																</td>
																<td>
																	<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																	<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
																</td>
															</tr>

															<tr>
																<td>2</td>
																<td>Region B</td>
																<td>67890</td>
																<td>No</td>
																<td>2</td>
																<td>
																	<span class="badge bg-danger">Inactive</span>
																</td>
																<td>
																	<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																	<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
																</td>
															</tr>
														</tbody>
													</table>
												</div>
											</div>
										</div>


										<!-- BUTTONS -->
										<div class="text-center mt-4">
											<hr>
											<div class="d-grid gap-2 d-md-flex justify-content-md-end">
												<button type="submit" class="btn btn-primary button-background waves-effect">
													<i class="bi bi-save"></i> Save
												</button>
												<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
													<i class="bi bi-x-circle"></i> Clear
												</button>
											</div>
										</div>


									</div>


									<!--end::Row-->
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->

		</div>
	</div>

</div>


@section Scripts {
	<script>
		$(document).ready(function () {
			// Search functionality
			$("#searchInput").on("keyup", function () {
				var value = $(this).val().toLowerCase();
				$("tbody tr").filter(function () {
					$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
				});
			});
		});
	</script>
}