@{
	ViewData["Title"] = "Phone Mask";
}


<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Phone Mask</h4>
								</div>

							</div>


							<!--begin::Card Body-->
							<div class="card-body">

								<form asp-action="Create" method="post">
									<!--begin::Row-->
									<!-- Form -->



									<div class="row">
										<div class="col-md-12">

											<div class="mb-3">
												<label for="TextBox2" class="form-label fw-bold">Phone Number:</label>
												<input type="text" id="TextBox2" class="form-control phone-mask" placeholder="+971 5##-###-####">
											</div>

											<div class="d-grid gap-2 d-md-flex justify-content-md-end">
												<button type="submit" class="btn btn-primary button-background waves-effect">
													<i class="bi bi-pencil-square"></i> Update
												</button>
												<button type="button" class="btn btn-outline-secondary waves-effect" id="clearBtn">
													<i class="bi bi-x-circle"></i> Clear
												</button>
											</div>
										</div>
									</div>


									<!--end::Row-->
								</form>
							</div>
							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->

		</div>
	</div>
</div>


<script>
						$(document).ready(function () {
		$(".phone-mask").inputmask({
			mask: "+971 5##-###-####",  // UAE Format
			placeholder: "_",           // Underscore as placeholder
			showMaskOnHover: false,     // Hides mask on hover
			clearMaskOnLostFocus: true, // Clears incomplete input
			definitions: {
				"#": {
					validator: "[0-9]", // Only numbers allowed
					cardinality: 1
				}
			}
		});
	});

</script>