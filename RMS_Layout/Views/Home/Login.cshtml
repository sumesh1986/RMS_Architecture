	<script>
		let focusedInput = null;

		// Store the last focused input field
		document.addEventListener('focusin', function (event) {
			if (event.target.tagName === 'INPUT' && event.target.type === 'text' || event.target.type === 'password') {
				focusedInput = event.target;
			}
		});

		function appendNumber(num) {
			if (focusedInput) {
				focusedInput.value += num;
				focusedInput.focus();
			}
		}

		function clearRegister() {
			if (focusedInput) {
				focusedInput.value = '';
				focusedInput.focus();
			}
		}

		function backspace() {
			if (focusedInput) {
				focusedInput.value = focusedInput.value.slice(0, -1);
				focusedInput.focus();
			}
		}
	</script>


