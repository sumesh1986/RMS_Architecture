@{
	ViewData["Title"] = "Perform EOD";
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">


<!-- ============================================================== -->
<!-- Start Content here -->
<!-- ============================================================== -->



<div class="page-content">

	<div class="row">
		<div class="col-lg-12">


			<!--begin::Container-->
			<div class="container-fluid">
				<!--begin::Row-->
				<div class="row">
					<!--begin::Col-->
					<div class="col-12">
						<!--begin::Card-->
						<div class="card">

							<!--begin::Card Header-->
							<div class="card-header">
								<!--begin::Card Title-->
								<div class="card-header header-background text-white text-center">
									<h4>Perform EOD</h4>
								</div>
								<!--end::Card Title-->

							</div>
							<!--end::Card Header-->


							<!--begin::Card Body-->


							<div class="card-body">
								<form asp-action="Create" method="post">
									<!-- Branch Setup Form -->
									<div class="row g-3">
										<!-- Concept -->
										<div class="col-md-3 col-sm-6">
											<label for="concept" class="form-label">Concept:</label>
											<select id="concept" class="form-control">
												<option selected>--Select--</option>
											</select>
										</div>

										<!-- Group Name -->
										<div class="col-md-3 col-sm-6">
											<label for="groupName" class="form-label">Group Name:</label>
											<select id="groupName1" class="form-control">
												<option selected>--Select--</option>
											</select>
										</div>

										<!-- Branch Name -->
										<div class="col-md-3 col-sm-6">
											<label for="branchName" class="form-label">Branch Name:</label>
											<select id="branchName" class="form-control">
												<option selected>--Select--</option>
											</select>
										</div>
									</div>

									<!-- Search and List -->
									<div class="card-header header-background text-white d-flex justify-content-between align-items-center mt-3">
										<span class="fw-bold">List</span>
										<div class="input-group input-group-sm w-auto ms-auto">
											<input type="text" class="form-control" id="searchInput" placeholder="Search...">
											<span class="input-group-text"><i class="bi bi-search"></i></span>
										</div>
									</div>

									<!-- Summary Table -->
									<div class="card-body">
										<div class="table-responsive">
											<table class="table table-striped table-hover align-middle">
												<thead class="table-success">
													<tr>
														<th>Number of Customers</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Number of Records</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Total Offer</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Total Sales</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Total Discounts</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Total VAT</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Total Service Charge</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Total Municipality Charge</th>
														<th>0.00</th>
													</tr>
													<tr class="table-info fw-bold">
														<th>Net Amount</th>
														<th>0.00</th>
													</tr>
												</thead>
											</table>
										</div>
									</div>

									<!-- Open Checks Table -->
									<div class="card-body">
										<div class="table-responsive">
											<table class="table table-striped table-hover align-middle">
												<thead class="table-success">
													<tr>
														<th>Number of open checks (not printed)</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Number of open checks (printed)</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Expected Amount</th>
														<th>0.00</th>
													</tr>
													<tr>
														<th>Number of User Logged</th>
														<th>0.00</th>
													</tr>
												</thead>
											</table>
										</div>
									</div>

									<!-- Date Pickers -->
									<div class="row g-3 mt-3">
										<div class="col-md-3 col-sm-6">
											<label for="datepicker1" class="form-label">Open Date:</label>

											<input type="text" id="datepicker1" name="Date" class="form-control datepicker" placeholder="yyyy-mm-dd" />
											@*   <span class="input-group-text bg-primary text-white">
                                            <i class="bi bi-calendar3"></i>
                                        </span> *@

										</div>



										<div class="col-md-3 col-sm-6">
											<label for="datepicker2" class="form-label">System Date:</label>
											<input type="text" id="datepicker2" name="Date" class="form-control datepicker" placeholder="yyyy-mm-dd" />
										</div>
									</div>

									<!-- Pending Checks Alert -->
									<div class="row g-3 mt-3">
										<div class="col-12">
											<div class="alert alert-warning text-center">
												<strong>There are some pending checks to be closed, therefore you can't perform EOD process.</strong>
											</div>
										</div>
									</div>

									<!-- Perform EOD Button -->
									<div class="row g-3">
										<div class="col-12 d-flex justify-content-end">
											<button type="submit" class="btn btn-primary button-background waves-effect">
												<i class="bi bi-check-circle"></i> Perform EOD
											</button>
										</div>
									</div>

									<!-- User List Table -->
									<div class="card mt-4 shadow-sm">
										<div class="card-header header-background text-white d-flex justify-content-between align-items-center">
											<span class="fw-bold">User List</span>
											<div class="input-group input-group-sm w-auto ms-auto">
												<input type="text" class="form-control" id="searchInput2" placeholder="Search...">
												<span class="input-group-text"><i class="bi bi-search"></i></span>
											</div>
										</div>

										<div class="card-body">
											<div class="table-responsive">
												<table class="table table-striped table-hover align-middle" id="userTable">
													<thead class="table-success">
														<tr>
															<th>#</th>
															<th>User Name</th>
															<th>User ID</th>
															<th>Total Amount</th>
															<th>Clock In</th>
															<th>Clock Out</th>
															<th>Total Hours</th>
															<th>Status</th>
															<th>Actions</th>
														</tr>
													</thead>
													<tbody>
														<tr>
															<td class="serial"></td>
															<td>ABC</td>
															<td>ABC123</td>
															<td>12345</td>
															<td>09:00 AM</td>
															<td>06:00 PM</td>
															<td>9 Hours</td>
															<td>
																<span class="badge bg-success">Active</span>
															</td>
															<td>
																<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
															</td>
														</tr>
														<tr>
															<td class="serial"></td>
															<td>UFS</td>
															<td>UFS456</td>
															<td>54321</td>
															<td>10:00 AM</td>
															<td>07:00 PM</td>
															<td>9 Hours</td>
															<td>
																<span class="badge bg-danger">Inactive</span>
															</td>
															<td>
																<button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i></button>
																<button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i></button>
															</td>
														</tr>
													</tbody>
												</table>
											</div>
										</div>



									</div>
								</form>
							</div>



							<!--end::Card Body-->

						</div>
						<!--end::Card-->

					</div>
					<!--end::Col-->
				</div>
				<!--end::Row-->
			</div>
			<!--end::Container-->


		</div>
	</div>
</div>



<script src="~/js/jquery-3.6.4.min.js"></script>
